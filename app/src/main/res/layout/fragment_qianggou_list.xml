<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            android:src="@drawable/iphone13"
            android:contentDescription="测试用图" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:paddingRight="0dp"
            android:layout_margin="15dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/separatorColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="苹果手机13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/separatorColor"
                android:textSize="15sp"
                android:paddingTop="6dp"
                android:textStyle="bold"
                android:text="详细参数："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="A14仿生芯片|6.7英寸屏幕"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="256G大容量存储|5G网络"/>

            <RelativeLayout
                android:id="@+id/addressmanager_layout"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_background"
                    android:text="库存：20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/yuanjia"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@id/yuanjia"
                    android:text="3000人已预约"
                    android:textColor="@color/red_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/red_background"
                android:text="￥5000"/>

            <Button
                android:id="@+id/btLogin"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bt_uisquare"
                android:text="等待秒杀开始"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>